@model HireATutor.Models.Category

@{
    ViewBag.Title = "CategoryDetails";
}

<div>
    <br />
    <h4>Category</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.catName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.catName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.catDesc)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.catDesc)
        </dd>
    </dl>

    <h4>Gigs</h4>

    <table class="table">
        @foreach (var item in Model.Gigs)
        {
            <tr>
                <td>
                    @Html.ActionLink(item.gigName, "Gig", new { id = item.gigId })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.gigDesc)
                </td>
            </tr>
        }

    </table>
</div>

<p>
    @Html.ActionLink("Back to List", "Categories")
</p>
