@model IEnumerable<HireATutor.Models.Category>

@{
    ViewBag.Title = "Categories";
}

<h2>Categories</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.catName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.catDesc)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.catName, "Category", new { id = item.catId })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.catDesc)
        </td>
    </tr>
}

</table>
